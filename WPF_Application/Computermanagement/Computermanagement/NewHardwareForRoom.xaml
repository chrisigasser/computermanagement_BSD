<Window x:Class="Computermanagement.NewHardwareForRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Computermanagement"
        mc:Ignorable="d"
        Title="NewHardwareForRoom" Height="211.663" Width="300">
    <Grid>
        <Label Content="Hardware: " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="77"/>
        <ComboBox x:Name="combobox_hardware" HorizontalAlignment="Left" Margin="87,13,0,0" VerticalAlignment="Top" Width="196"/>
        <Label Content="Name: " HorizontalAlignment="Left" Margin="10,67,0,0" VerticalAlignment="Top" Width="77"/>
        <Label Content="Description: " HorizontalAlignment="Left" Margin="10,116,0,0" VerticalAlignment="Top" Width="77"/>
        <Button Content="Add Hardware to room" HorizontalAlignment="Left" VerticalAlignment="Top" Width="145" Margin="138,153,0,0" Click="Button_Click"/>
        <TextBox x:Name="textbox_name" HorizontalAlignment="Left" Height="23" Margin="87,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="196"/>
        <TextBox x:Name="textbox_desc" HorizontalAlignment="Left" Height="23" Margin="87,119,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="196"/>

    </Grid>
</Window>
