package at.Hardwaremanagement;

import java.sql.Connection;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;

import javax.ws.rs.GET; 
import javax.ws.rs.Path; 
import javax.ws.rs.Produces; 
import javax.ws.rs.core.MediaType;

import at.Database.ConnectionFactory;

@Path("/UserService")

public class UserService {
	//http://localhost:8080/RESTOracle/rest/UserService/<PATH>
	
	@GET 
	@Path("/test") 
	@Produces(MediaType.TEXT_PLAIN) 
	public String getUsers(){ 
		return "{ \"name\":\"John\", \"age\":31, \"city\":\"New York\" }";
	}
	
	@GET 
	@Path("/db") 
	@Produces(MediaType.TEXT_PLAIN) 
	public String worksDatabase() {
		Connection conn = null;
		try {
			conn = ConnectionFactory.get();
			
			Statement stmt = conn.createStatement(ResultSet.TYPE_SCROLL_INSENSITIVE, ResultSet.CONCUR_UPDATABLE);
			String query = "select Bezeichnung, Preis from artikel;";
			
			ResultSet rset = stmt.executeQuery(query);
			String result = "Result: ";
			while (rset.next()) {
				result = result + (rset.getObject(0) + "," + rset.getObject(1)+";");
			}
			return result;
		} catch (SQLException e) {
			return "Exception";
		}
	}

}
