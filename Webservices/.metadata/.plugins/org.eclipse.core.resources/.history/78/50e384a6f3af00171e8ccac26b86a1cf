package at.Hardwaremanagement;

import java.sql.Connection;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;

import javax.sql.RowSet;
import javax.ws.rs.Consumes;
import javax.ws.rs.DefaultValue;
import javax.ws.rs.GET; 
import javax.ws.rs.Path; 
import javax.ws.rs.Produces;
import javax.ws.rs.QueryParam;
import javax.ws.rs.core.MediaType;

import org.json.simple.JSONArray;
import org.json.simple.JSONObject;

import at.Database.ConnectionFactory;

@Path("/UserService")

public class UserService {
	//http://localhost:8080/RESTOracle/rest/UserService/<PATH>
	//ResultSet beginnt mit zählen bei 1!!!!
	
	@GET 
	@Path("/test") 
	@Produces(MediaType.TEXT_PLAIN) 
	public String getUsers(){ 
		return "{ \"name\":\"John\", \"age\":31, \"city\":\"New York\" }";
	}
	
	@GET 
	@Path("/db") 
	@Consumes("text/plain")
	@Produces(MediaType.APPLICATION_JSON) 
	public String worksDatabase(@QueryParam("myKeyIs")   @DefaultValue("") String arg1) {
		return "Key: " + arg1;
		Connection conn = null;
		try {
			conn = ConnectionFactory.get();
			
			Statement stmt = ConnectionFactory.get().createStatement(ResultSet.TYPE_SCROLL_INSENSITIVE, ResultSet.CONCUR_READ_ONLY);
			ResultSet res = stmt.executeQuery("select Bezeichnung, Preis from artikel");
			
			JSONArray result = new JSONArray();
			while (res.next()) {
				JSONObject o = new JSONObject();
				o.put("Bezeichnung", res.getString(1));
				o.put("Preis", res.getString(2));
				result.add(o);
			}
			res.close();
			stmt.close();
			conn.close();
			return result.toJSONString();
		} catch (SQLException e) {
			return "Exception";
		}
	}

}
